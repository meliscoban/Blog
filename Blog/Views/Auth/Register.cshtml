@model RegisterViewModel

@{ 
    ViewData["Title"] = "Register"; 
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">

        <div class="fadeIn first">
            <img src="https://www.kindpng.com/picc/m/24-248394_user-icon-hd-png-download.png" id="icon" alt="User Icon" />
            <br />
            <h2 style="margin:0px;">Register</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post" asp-controller="Auth" asp-action="Register">
            <input asp-for="Username" class="fadeIn second" placeholder="login">
            <br />
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Password" class="fadeIn third" placeholder="password">
            <br />
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="submit" class="fadeIn fourth" value="Register">
        </form>

        <div id="formFooter">
            <a class="underlineHover" asp-controller="Auth" asp-action="Login">Already Have An Account?</a>
        </div>

    </div>
</div>